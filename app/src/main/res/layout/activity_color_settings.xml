<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.bartvanherck.kassa.ColorSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_colorsettings_left_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/holo_green_dark">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtColorSettingsLeft"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" LINKS "
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCSLeft_Green"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGreen"
                    android:onClick="actionCSLeft_Green"
                    android:text=""/>
                <Button
                    android:id="@+id/btnCSLeft_Red"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorRed"
                    android:onClick="actionCSLeft_Red"
                    android:text="" />
                <Button
                    android:id="@+id/btnCSLeft_Yellow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorYellow"
                    android:onClick="actionCSLeft_Yellow"
                    android:text=" " />
                <Button
                    android:id="@+id/btnCSLeft_Blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBlue"
                    android:onClick="actionCSLeft_Blue"
                    android:text=" " />
                <Button
                    android:id="@+id/btnCSLeft_White"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:onClick="actionCSLeft_White"
                    android:text=" "  />
                <Button
                    android:id="@+id/btnCSLeft_Gray"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGray"
                    android:onClick="actionCSLeft_Gray"
                    android:text=" "  />
                <Button
                    android:id="@+id/btnCSLeft_Purple"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPurple"
                    android:onClick="actionCSLeft_Purple"
                    android:text=" " />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_colorsettings_middle_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/holo_green_dark">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtColorSettingsMiddle"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" MIDDEN "
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCSMid_Green"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Green"
                    android:text=" "
                    android:backgroundTint="@color/colorGreen" />
                <Button
                    android:id="@+id/btnCSMid_Red"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Red"
                    android:text=" "
                    android:backgroundTint="@color/colorRed" />
                <Button
                    android:id="@+id/btnCSMid_Yellow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Yellow"
                    android:text=" "
                    android:backgroundTint="@color/colorYellow"
                    />
                <Button
                    android:id="@+id/btnCSMid_Blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Blue"
                    android:text=" "
                    android:backgroundTint="@color/colorBlue"
                    />
                <Button
                    android:id="@+id/btnCSMid_White"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_White"
                    android:text=" "
                    android:backgroundTint="@color/colorWhite"
                    />
                <Button
                    android:id="@+id/btnCSMid_Gray"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Gray"
                    android:text=" "
                    android:backgroundTint="@color/colorGray"
                    />
                <Button
                    android:id="@+id/btnCSMid_Purple"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="actionCSMid_Purple"
                    android:text=" "
                    android:backgroundTint="@color/colorPurple"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_colorsettings_right_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/holo_green_dark">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtColorSettingsRight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" RECHTS "
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnCSRight_Green"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Green"
                        android:text=" "
                        android:backgroundTint="@color/colorGreen"
                        />
                    <Button
                        android:id="@+id/btnCSRight_Red"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Red"
                        android:text=" "
                        android:backgroundTint="@color/colorRed"
                        />
                    <Button
                        android:id="@+id/btnCSRight_Yellow"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Yellow"
                        android:text=" "
                        android:backgroundTint="@color/colorYellow"
                        />
                    <Button
                        android:id="@+id/btnCSRight_Blue"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Blue"
                        android:text=" "
                        android:backgroundTint="@color/colorBlue"
                        />
                    <Button
                        android:id="@+id/btnCSRight_White"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_White"
                        android:text=" "
                        android:backgroundTint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/btnCSRight_Gray"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Gray"
                        android:text=" "
                        android:backgroundTint="@color/colorGray"
                        />
                    <Button
                        android:id="@+id/btnCSRight_Purple"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="actionCSRight_Purple"
                        android:text=" "
                        android:backgroundTint="@color/colorPurple"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnColorSettingsBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="actionColorSettingsBack"
            android:text="TERUG"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
