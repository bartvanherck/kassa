<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/UpGroen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionUpLeft"
                    android:text="+ 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <Button
                    android:id="@+id/downGroen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionDownLeft"
                    android:text="- 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_left_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/holo_green_dark">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtLeft"
                    android:layout_weight="1"
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="00"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/upMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionUpMiddle"
                    android:text="+ 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <Button
                    android:id="@+id/downMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionDownMiddle"
                    android:text="- 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_middle_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/holo_orange_light">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtMiddle"
                    android:layout_weight="1"
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="00"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/upRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionUpRight"
                    android:text="+ 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <Button
                    android:id="@+id/downRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="actionDownRight"
                    android:text="- 1"
                    android:textAlignment="center"
                    android:textSize="75sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_right_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/darker_gray">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtRight"
                    android:layout_weight="1"
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="00"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_weight="1"
        android:id="@+id/txtResultaat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="0 â‚¬"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="100sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="actionVolgende"
        android:text="Volgende"
        android:textAlignment="center"
        android:textSize="75sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
